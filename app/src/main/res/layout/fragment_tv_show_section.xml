<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tv_show_section_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <br.com.concrete.themoviebd.view.MediaSectionView
            android:id="@+id/on_the_air_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="On The Air" />

        <br.com.concrete.themoviebd.view.MediaSectionView
            android:id="@+id/popular_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Popular" />

        <br.com.concrete.themoviebd.view.MediaSectionView
            android:id="@+id/top_rated_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Top Rated" />

        <br.com.concrete.themoviebd.view.MediaSectionView
            android:id="@+id/airing_today_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Airing Today" />

    </LinearLayout>

</ScrollView>
