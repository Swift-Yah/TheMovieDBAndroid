<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.main.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <br.com.concrete.themoviebd.view.HorizontalSectionView
                android:id="@+id/now_playing_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sectionTitle="Now Playing" />

            <br.com.concrete.themoviebd.view.HorizontalSectionView
                android:id="@+id/popular_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sectionTitle="Popular" />

            <br.com.concrete.themoviebd.view.HorizontalSectionView
                android:id="@+id/top_rated_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sectionTitle="Top Rated" />

            <br.com.concrete.themoviebd.view.HorizontalSectionView
                android:id="@+id/upcoming_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sectionTitle="Upcoming" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
