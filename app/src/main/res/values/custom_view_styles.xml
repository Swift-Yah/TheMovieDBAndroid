<resources>

    <!-- HorizontalSectionViewStyle -->
    <style name="MediaSectionViewStyle">
        <item name="titleTextAppearance">@style/MediaSectionViewStyle.TitleAppearance</item>
    </style>

    <style name="MediaSectionViewStyle.TitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">28sp</item>
    </style>

    <!-- MediaItemViewStyle -->
    <style name="MediaItemViewStyle">
        <item name="titleTextAppearance">@style/MediaItemViewStyle.TitleAppearance</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="MediaItemViewStyle.TitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- SeeMoreItemViewStyle -->
    <style name="SeeMoreItemViewStyle">
        <item name="android:textAppearance">@style/SeeMoreItemViewStyle.TextAppearance</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="SeeMoreItemViewStyle.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
